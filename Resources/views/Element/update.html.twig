{% extends 'CorePrototypeBundle:Container:update.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
<div class="row">
   
    {{ form_start(form) }}
 <div class="col-md-12 col-sm-12">
    {{ form_errors(form) }}

    {% for child in form.children %}
        
        {{ form_row(child) }}

    {% endfor %}
  </div>
    {# konieczność przygotowania tłumaczeń  #}
 
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <div class="button-row button-rows">
                    <button onclick="history.go(-1)" class="btn btn-default pull-left btn-bottom" type="button">Anuluj</button>
                </div>
                <div class="button-row button-rows ">          
                    <button class="btn btn-success pull-right btn-bottom" type="submit" >Zapisz</button>
                </div>
            </div>
        </div>
  
    

    {{ form_end(form) }} 
  
</div>
{% endblock %}

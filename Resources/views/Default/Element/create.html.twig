{% extends config.get("twig_container_create") %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block element %}
    <div class="row">
        <div class="col-md-12 col-sm-12">
            {# added the line for disable html validation #}
            {{ form_start(form, { 'attr': {'class': '','novalidate': 'novalidate' }}) }}

            {{ form_errors(form) }}

            {% for child in form.children %}
                {{ form_row(child) }}
            {% endfor %}

            <div class="button-rows">
                <button onclick="history.go(-1)" class="btn btn-default pull-left btn-bottom" type="button">{{ "Cancel"|trans }}</button>

                <button class="btn btn-success pull-right btn-bottom" type="submit" >Zapisz</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>



{% endblock  element%}

{% block js %}

    {{parent()}}
    <script>  {{ form_jquery_validation(form) }} </script>
{% endblock %}
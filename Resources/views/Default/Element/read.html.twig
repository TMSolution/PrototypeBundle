{% extends config.get("twig_container_read") %}

{% block element %}

    <div class="row">
        <div class="col-md-12 col-sm-12">

            <table class="record_properties table table-hover table-striped">
                <tbody>
                    {% for key,property in properties %}


                        {% if property is iterable %}
                            <tr>
                                <td><strong>{{key|trans}}</strong></td>
                                <td>
                                    <ul>
                                        {% for item in property%}
                                            <li>
                                                {% if item %}{{item}}{% else %}-{% endif %}
                                            </li>   
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr> 
                        {% else %}

                            <tr>
                                <td><strong>{{key|trans}}</strong></td>
                                <td>{% if property %}{{property}}{% else %}-{% endif %}</td>
                            </tr>
                        {% endif %}    


                    {% endfor %}    

                </tbody>
            </table>
        </div> </div> 
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <button onclick="history.go(-1)" class=" prevButton btn btn-default">
                {{ "Back"|trans}}
            </button>
            <span class="pull-right">   
                <a href="{{ path(routeservice.getRouteName(config,'delete'), routeParams)}}" class="btn btn-default">
                    {{ "Delete"|trans}} 

                </a>
                <a href="{{ path(routeservice.getRouteName(config,'edit'), routeParams)}}" class="btn btn-default">
                    {{ "Edit"|trans}}
                </a>
            </span>
        </div>
    </div>   


{% endblock element %}

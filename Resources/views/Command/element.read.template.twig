                            {{ "{% endfor %}{% else %}-{% endif %}" }}

                    </div>
                </div> 
                {{ "{% else %}" }}

                <div class="form-group m-b-20">
                    <div class="col-sm-1 f-700">{{" {{'"}}{{lowerNameSpaceForTranslate}}.{{objectName}}.{{field}}{{"'|trans}} "}}</div>
                    <div class="col-sm-11">{{ "{% if properties."}}{{field}}{{" %}{{properties."}}{{field}}{{"}}{% else %}-{% endif %}" }}</div>

{% trans_default_domain 'FOSUserBundle' %}




<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" name="fos_user_registration_form"  class="fos_user_registration_register">
    
    
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword) }}
 
    <div class="checkbox">
    <label>
    {{ form_widget(form.registerTerms) }}
   
  {{'Accept' |trans}} <a href="url_to_pdf">{{ 'the terms' |trans}}</a></label>
    {{ form_errors(form.registerTerms) }} 
    </div>
    
    
    
    
    <div>
        <button style="display:block; width:180px; margin:0px auto;" class="btn btn-lg btn-block btn-social btn-reddit" type="submit"  value="{{ 'registration.submit'|trans }}" >
        
        <i class="fa fa-openid"></i> {{ 'registration.submit'|trans }}
        </button>
    </div>
    
</form>

